<ext4:container rootPath="csp/ewd/vendors/extjs" onBeforeRender="initIndexPage^app">
	<ext4:panel id="people" addPage="listPeople" />
	<ext4:formPanel id="myFormPanel" title="Add Person" width="300" height="200" bodyPadding="10">
		<ext4:textfield id="name" fieldLabel="Name" value="" />
		<ext4:textfield id="email" fieldLabel="Email" value="" />
		<ext4:textfield id="phone" fieldLabel="Phone" value="" />
		<ext4:submitbutton text="Add" nextPage="validateForm" addTo="people" replacePreviousPage="true" />
	</ext4:formPanel>
</ext4:container>